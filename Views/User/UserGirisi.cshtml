
@{
    ViewBag.Title = "UserGirisi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<IlacSitesi.Models.MonoklonalAntikors>

@using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "btn-btn primary" }))
{
    @Html.TextBox("searching")<button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase " type="submit" style="color: black">SEARCH</button>
    <div style="height: 350px; overflow: auto;">
        <!-- Your Table Here -->

        <table class="table table-bordered table table-hover" style="background-color: white">
            <thead>
                <tr>
                    <th>ICD-10 Code</th>
                    <th>Dose</th>
                    <th>D.D.D.</th>
                    <th>Producer</th>
                    <th>Indications</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="3" style="color:red">
                            No Match Any Document
                        </td>
                    </tr>

                }
                else
                {

                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.icd10_code</td>
                            <td>@item.dose</td>
                            <td>@item.defined_daily_dose</td>
                            <td>@item.Producer.producer_name</td>
                            <td>@item.Indications.indications_details</td>
                            <td>@Html.ActionLink("Details", "UserDetayGoruntule", new { id = item.ma_id }, new { @class = "btn btn-warning btn-xs text-uppercase" })</td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

}


