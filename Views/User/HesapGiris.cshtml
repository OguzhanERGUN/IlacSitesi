
@{
    ViewBag.Title = "HesapGiris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using IlacSitesi.Models
@model User

<br />
<br />
<br />
<br />

@*user girişi buradan yapılıyor*@

<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-left">
                <h2 class="section-heading text-uppercase">Kullanıcı Girişi</h2>
                <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            </div>
        </div>
        <div class="align-self-xl-center">
            <div class="col-lg-12">
                <form id="contactForm" name="sentMessage" novalidate="novalidate">
                    <div class="row">
                        @*Henüz HTML helper methodlarını incelemedim öğrenmeli ve buradaki form işlemini tamamlamalıyım.*@
                        @using (Html.BeginForm("HesapGiris", "User", FormMethod.Post))
                        {
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.Label("Email")
                                    @Html.TextBoxFor(x => x.UserMail, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.UserMail)
                                </div>
                                <div class="form-group">
                                    @Html.Label("Şifre")
                                    @Html.TextBoxFor(x => x.UserPassword, new { @class = "form-control " })
                                    @Html.ValidationMessageFor(x => x.UserPassword)
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-left">
                                <div id="success"></div>
                                <button  class="btn btn-primary btn-xl text-uppercase" >login</button>
                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

