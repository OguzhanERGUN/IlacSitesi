
@{
    ViewBag.Title = "HesapGiris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using IlacSitesi.Models
@model User
<br />
<br />
<br />
<br />

@*user girişi buradan yapılıyor*@
<div class="col-md-12 ">
    @using (Html.BeginForm("HesapGiris", "User", FormMethod.Post))
    {
        @Html.Label("Email")
        @Html.TextBoxFor(x => x.UserMail, new { @class = "form-control col-md-2 " })
        @Html.ValidationMessageFor(x => x.UserMail)
        <br />
        @Html.Label("Şifre")
        @Html.TextBoxFor(x => x.UserPassword, new { @class = "form-control col-md-2 " })
        @Html.ValidationMessageFor(x => x.UserPassword)
        <br />

        <button class="btn btn-info">Giriş Yap</button>
    }
</div>

<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-left">
                <h2 class="section-heading text-uppercase">Contact Us</h2>
                <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            </div>
        </div>
        <div class="align-self-xl-center">
            <div class="col-lg-12">
                <form id="contactForm" name="sentMessage" novalidate="novalidate">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input class="form-control" id="name" type="text" placeholder="Your Name *" required="required" data-validation-required-message="Please enter your name.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="email" type="email" placeholder="Your Email *" required="required" data-validation-required-message="Please enter your email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-left">
                            <div id="success"></div>
                            <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">login</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

