
@{
    ViewBag.Title = "HesapGiris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using IlacSitesi.Models
@model User



@*user girişi buradan yapılıyor*@


    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-left">
                <h3 class="section-heading text-uppercase">Kullanıcı Girişi</h3>
            </div>
        </div>
        <div class="align-self-xl-center">
            <div class="col-lg-12 ">
                    <div class="row">
                        @using (Html.BeginForm("HesapGiris", "User", FormMethod.Post))
                        {
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.Label("E-mail",new { @style = "color: #ffc107" })
                                    @Html.TextBoxFor(x => x.UserMail, new { @class = "form-control " })
                                    @Html.ValidationMessageFor(x => x.UserMail, "", new { @class = "text-danger" })
                                
                                    @Html.Label("Password", new { @style = "color: #ffc107" })
                                    @Html.PasswordFor(x => x.UserPassword, new { @class = "form-control " })
                                    @Html.ValidationMessageFor(x => x.UserPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            
                            <div class="col-lg-12 text-left">

                                <button class="btn btn-primary btn-xl text-uppercase">Giriş Yap</button>
                            </div>
                            
                        }
                    </div>
                
            </div>
        </div>
    </div>

