
@{
    ViewBag.Title = "Index";
}

@model IlacSitesi.Models.MonoklonalAntikors


    
        <div class="row">
            <div class="col-lg-12 center">
               

                    <!-- Your Table Here -->
                 
                    <table class="table table-bordered table table-hover" style="background-color: white">
                        <thead>
                            <tr>
                                <th>ICD-10 Code</th>
                                <th>Dose</th>
                                <th>D.D.D.</th>
                                <th>Producer</th>
                                <th>Indications</th>

                            </tr>
                        </thead>
                        <tbody>
                               
                                    <tr>
                                        <td>@Model.icd10_code</td>
                                        <td>@Model.dose</td>
                                        <td>@Model.defined_daily_dose</td>
                                        <td>@Model.Producer.producer_name</td>
                                        <td>@Model.Indications.indications_details</td>

                                    </tr>
                                
                            
                        </tbody>
                    </table>
                    
                    <div class="text-right">
                        <a href="/Home/IlacSil/@Model.ma_id" class="btn btn-sm btn-danger">
                            <i class="fas fa-user"></i> Ilacı Sil
                        </a>
                        <a href="/Home/IlacDuzenle/@Model.ma_id" class="btn btn-sm btn-warning">
                            <i class="fas fa-user"></i> Ilacı Düzenle
                        </a>
                    </div>
                </div>
            </div>    
